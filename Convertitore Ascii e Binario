<body>
  <div class="container">
    <h1>Convertitore ASCII & Binario</h1>

    <textarea id="inputText" rows="4" placeholder="Inserisci un testo da convertire..."></textarea>
    <button onclick="converti()">Converti</button>

    <pre id="output"></pre>
  </div>

  <footer>
    © 2025 - Creato da Emmanuel D'agrò
  </footer>

  <script>
    function converti() {
      const input = document.getElementById("inputText").value;
      let output = "";

      if (!input.trim()) {
        document.getElementById("output").textContent = "Inserisci un testo valido!";
        return;
      }

      for (let i = 0; i < input.length; i++) {
        const char = input[i];
        const ascii = char.charCodeAt(0);
        const binario = ascii.toString(2).padStart(8, "0");
        output += `${char}  →  ASCII: ${ascii}  →  Binario: ${binario}\n`;
      }

      document.getElementById("output").textContent = output;
    }
  </script>
